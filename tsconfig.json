{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "lib": ["esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "es2017"
  },
  "include": [
    "bin/**/*",
    "src/**/*.js"
  ]
}
